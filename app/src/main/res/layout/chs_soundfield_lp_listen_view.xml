<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" 
	android:gravity="center" 
    android:background="@null"
    android:orientation="vertical" >
    <View 
        android:layout_weight="1.6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
		android:layout_gravity="center"
        android:orientation="horizontal">
	    <View 
	        android:layout_weight="1.5"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        />
	    <RelativeLayout
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
			android:layout_gravity="center"
	        android:orientation="horizontal">
		    <LinearLayout
		        android:id="@+id/id_soundfield_lp_listen_view4"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_gravity="center"
				android:clickable="false"
				android:background="@null"
		        android:orientation="vertical">
		        <LinearLayout
		            android:layout_weight="1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:orientation="horizontal">
			        <ImageView 
			            android:id="@+id/id_soundfield_lp_listen_view0"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:clickable="false"
			            android:background="@null"
			            />
				     <View 
				        android:layout_weight="0.2"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"  
				         />
				     <ImageView 
				         android:id="@+id/id_soundfield_lp_listen_view1"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:clickable="false"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />  
				</LinearLayout>	 
			    <View 
			        android:layout_weight="0.1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"  
			         />
			    <LinearLayout
		            android:layout_weight="1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:orientation="horizontal">
			        <ImageView 
			            android:id="@+id/id_soundfield_lp_listen_view2"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:clickable="false"
			            android:background="@null"
			            />
				     <View 
				        android:layout_weight="0.2"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"  
				         />
				     <ImageView 
				         android:id="@+id/id_soundfield_lp_listen_view3"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:clickable="false"
			            android:background="@null"
			            />  
				</LinearLayout>	   
			</LinearLayout>	 
			
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_gravity="center"
				android:background="@null"
		        android:orientation="vertical">
		        <LinearLayout
		            android:layout_weight="1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:orientation="horizontal">
			        <ImageView 
			            android:id="@+id/id_soundfield_lp_clisten_view0"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />
				     <ImageView 
				         android:id="@+id/id_soundfield_lp_clisten_view1"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />  
				</LinearLayout>	 
			    <LinearLayout
		            android:layout_weight="1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:orientation="horizontal">

			        <ImageView 
			            android:id="@+id/id_soundfield_lp_clisten_view4"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />

				</LinearLayout>	   
			    <LinearLayout
		            android:layout_weight="1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:orientation="horizontal">
			        <ImageView 
			            android:id="@+id/id_soundfield_lp_clisten_view2"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />
				     <ImageView 
				         android:id="@+id/id_soundfield_clp_listen_view3"
			            android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
			            android:background="@null"
			            />  
				</LinearLayout>	   
			</LinearLayout>	 
		</RelativeLayout>	 
	    <View 
	        android:layout_weight="1.5"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        />
	</LinearLayout>	 
	<View 
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@null"
        />
    
</LinearLayout>