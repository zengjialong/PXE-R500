<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/space_170"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"

   >
    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/chs_ly_aux_input_top_bg"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_txt_output_delay_val"
                android:layout_width="@dimen/space_120"
                android:layout_height="@dimen/space_30"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="@string/off_delay_time"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/id_btn_exit"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_marginRight="@dimen/space_5"
                android:layout_alignParentRight="true"
                android:src="@drawable/chs_dialog_exit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/chs_ly_aux_input_img_normal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_txt_output_off_delay_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_30"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:gravity="center"
                android:orientation="horizontal">
            <com.chs.mt.pxe_r500.tools.LongCickButton
                android:id="@+id/id_btn_output_delay_sub"
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="center"
                android:background="@drawable/chs_volume_sub_normal"
                android:gravity="center"
                android:maxLines="1"
                android:scaleType="fitCenter"
                android:textAllCaps="false"
                android:textColor="@color/text_color_main_valume" />

            <com.chs.mt.pxe_r500.tools.MHS_SeekBar
                android:id="@+id/id_know_output_delay_seekbar"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="@dimen/space_32"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_gravity="center"
                android:gravity="center"
                android:thumb="@drawable/chs_seekbar_thumb"
                mhsb_seekbar:mhs_progress_max="30"
                mhsb_seekbar:mhs_progress_width="3dp"
                mhsb_seekbar:mhs_progress_background_color="@color/white"
                mhsb_seekbar:mhs_progress_color="@color/mcl_seekbar_progress_color"
                />

            <com.chs.mt.pxe_r500.tools.LongCickButton
                android:id="@+id/id_btn_output_delay_inc"
                android:layout_width="@dimen/space_32"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="center"
                android:background="@drawable/chs_volume_inc_normal"
                android:gravity="center"
                android:maxLines="1"
                android:scaleType="fitCenter"
                android:textAllCaps="false"
                android:textColor="@color/text_color_main_valume" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/space_7"
                android:orientation="vertical">

                <Button
                    android:id="@+id/id_btn_time_delay_sure"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="@dimen/space_30"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/Sure"
                    android:textColor="@color/white"

                    android:textSize="@dimen/space_12"
                    android:background="@drawable/chs_dialog_selector"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>

