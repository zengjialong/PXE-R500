<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="提示"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        android:autoSizeMinTextSize="@dimen/space_10"
        android:autoSizeMaxTextSize="@dimen/space_15"
 />


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_250"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/StatementCON"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_state"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="@dimen/space_10"
    android:autoSizeMaxTextSize="@dimen/space_15"
          />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_state_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_round_left_white"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_state_disagree"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/space_10"
            android:autoSizeMaxTextSize="@dimen/space_20" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_state_line" />


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_round_right_white"
            android:gravity="center"
            android:text="@string/Sure"
            android:textColor="@color/color_state_agree"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/space_10"
            android:autoSizeMaxTextSize="@dimen/space_20" />


    </LinearLayout>

</LinearLayout>
