<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/id_llyout_dialog_user_group"
	android:layout_width="250dp"
	android:layout_height="150dp"
	android:layout_gravity="center"
	android:gravity="center"
	android:background="@null"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="250dp"
		android:layout_height="170dp"
		android:layout_gravity="center"
		android:gravity="center"
		android:background="@drawable/chs_dialog_bg"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/id_text_msg"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:layout_gravity="center"
				android:text="SoundOpt_pwd"
				android:textColor="@color/dialog_text_normal_color"
				android:layout_centerInParent="true"
				android:textAllCaps="false"
				android:textSize="15sp"
				android:gravity="center"/>

		</RelativeLayout>

		<EditText
			android:id="@+id/id_et_username_edit"
			android:layout_width="180dp"
			android:layout_height="40dp"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:background="@drawable/chs_dialog_btn_normal"
			android:textColor="@color/dialog_text_normal_color"
			android:gravity="center"
			android:inputType="textCapCharacters"
			android:maxLines="1"
			android:maxLength="6"
			android:textSize="15sp"/>


		<LinearLayout
			android:layout_width="180dp"
			android:layout_height="30dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_marginTop="20dp"
			android:orientation="horizontal">
			<Button
				android:id="@+id/id_b_cancle"
				android:layout_width="80dp"
				android:layout_height="match_parent"
				android:background="@drawable/chs_dialog_btn_normal"
				android:textAllCaps="false"
				android:text="@string/cancel"
				android:textColor="@color/dialog_btn_text_normal_color"
				android:textSize="@dimen/group_opt_text_size" />
			<View
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				/>

			<Button
				android:id="@+id/id_b_save"
				android:layout_width="80dp"
				android:layout_height="match_parent"
				android:background="@drawable/chs_dialog_btn_normal"
				android:text="@string/Sure"
				android:textAllCaps="false"
				android:textColor="@color/dialog_btn_text_normal_color"
				android:textSize="@dimen/group_opt_text_size" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>