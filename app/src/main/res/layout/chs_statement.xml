<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rlyout_statement"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/chs_main_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/Statement"
        android:textColor="#ffe5790a"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/id_btn_statement"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:lineSpacingExtra="10dp"
        android:textScaleX="1.0"
        android:text="@string/StatementCON"
        android:textSize="19sp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:background="@drawable/chs_statement"
        android:textColor="#ffffffff"
        />

    <LinearLayout
        android:id="@+id/ly_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:background="@drawable/chs_statement"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:orientation="horizontal">



        <com.chs.mt.pxe_r500.tools.AlignedTextView
            android:id="@+id/atv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:atv_lineSpacingExtra="5dp"
            app:atv_textColor="@color/colorAccent"
            app:atv_textSize="14sp"/>

        <com.chs.mt.pxe_r500.tools.JustifyTextView
            android:id="@+id/id_tv_statement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/StatementCON"
            android:textColor="#ffffffff"
            android:textScaleX="1.0"
            android:textSize="19sp" />


    </LinearLayout>
<!--    android:background="@drawable/chs_statement"ï¼Ÿ-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        android:background="@drawable/chs_statement">

    <TextView
        android:id="@+id/haodi_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/StatementCON"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:lineSpacingExtra="10dp"
        android:textScaleX="1.0"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        ></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_show"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/id_show_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/chs_statement_press"
            android:clickable="false"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:scaleType="fitXY"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="StatementShow"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/id_accapt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/chs_btn_statement_selector"
        android:gravity="center"
        android:maxLines="1"
        android:scaleType="fitXY"
        android:text="StatementAccept"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:textSize="25sp" />
</LinearLayout>