<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mhsb_seekbar="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chs.mt.pxe_r500.MusicBox.MusicLrcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:flipInterval="30"
            android:background="#FF254971"
            android:persistentDrawingCache="animation"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/id_b_index0"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/chs_musiclrc_pindex_press"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <Button
                android:id="@+id/id_b_index1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/chs_musiclrc_pindex_press"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <Button
                android:id="@+id/id_b_index2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/chs_musiclrc_pindex_press"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <Button
                android:id="@+id/id_b_index3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/chs_musiclrc_pindex_press"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
