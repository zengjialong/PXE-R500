<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_dialog_save_singlemac_file"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="@dimen/space_30"
        android:layout_gravity="center"
        android:background="@drawable/chs_ly_aux_input_top_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="@string/SSM_Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_btn_exit"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_5"
            android:src="@drawable/chs_dialog_exit"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/chs_ly_aux_input_img_normal"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_filename"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/space_15"
                android:text="@string/SSM_FileName"
                android:textColor="@color/color_dialogText"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/id_et_filename"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:imeOptions="normal"
                android:textColor="#FFffffff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_filedetials"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/space_15"
                android:text="@string/SSM_Detial"
                android:textColor="#FFffffff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/id_et_filedetials"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:gravity="center"
                android:imeOptions="normal"
                android:maxLength="10"
                android:textColor="#FFffffff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_llyout_single_sel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/id_b_sel_single"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chs_ssm_btncheck_normal"
                    android:clickable="false"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/SSM_Single"
                    android:textAllCaps="false"
                    android:textColor="#FFffffff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_llyout_mac_sel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/id_b_sel_mac"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/chs_ssm_btncheck_normal"
                    android:clickable="false"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/SSM_Machine"
                    android:textAllCaps="false"
                    android:textColor="#FFffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/id_b_mac_msg"
                android:layout_width="wrap_content"
                android:layout_height="40dp"


                android:gravity="center"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"

                android:text="@string/SSM_SaveMacMSG"
                android:textAllCaps="false"
                android:textColor="#FFffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:background="@color/dialog_midline_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/space_10"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null" />

            <Button
                android:id="@+id/id_b_ssm_cancel"
                android:layout_width="70dp"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:background="@drawable/chs_dialog_btn_normal"
                android:scaleType="fitXY"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <Button
                android:id="@+id/id_b_ssm_save"
                android:layout_width="70dp"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@drawable/chs_dialog_btn_normal"
                android:scaleType="fitXY"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>