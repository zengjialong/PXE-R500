<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/id_llyout_dialog_user_group"
	android:layout_width="@dimen/dialog_width"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:gravity="center"
	android:background="@null"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="@dimen/dialog_width"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center"
		android:background="@drawable/chs_ly_aux_input_top_bg"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/space_30"
			android:orientation="vertical">

			<TextView
				android:id="@+id/id_text_msg"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/space_30"
				android:layout_gravity="center"
				android:text="@string/sound_operation"
				android:textColor="@color/dialog_text_normal_color"
				android:textAllCaps="false"
				android:layout_marginLeft="@dimen/space_10"
				android:textSize="15sp"
				android:gravity="center_vertical"/>
			<ImageView
				android:id="@+id/id_btn_exit"
				android:layout_width="@dimen/space_30"
				android:layout_height="@dimen/space_30"
				android:layout_marginRight="@dimen/space_5"
				android:layout_alignParentRight="true"
				android:visibility="gone"
				android:src="@drawable/chs_dialog_exit" />
		</RelativeLayout>
		<LinearLayout
			android:layout_width="@dimen/dialog_width"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:gravity="center"

			android:background="@drawable/chs_ly_aux_input_img_normal"
			android:orientation="vertical">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/space_50"
			android:orientation="vertical">

			<TextView
				android:id="@+id/id_text_title"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/space_30"
				android:layout_gravity="center"
				android:text="@string/SetGroupName"
				android:textColor="@color/dialog_text_normal_color"
				android:layout_centerInParent="true"
				android:textAllCaps="false"
				android:textSize="15sp"
				android:gravity="center"/>

		</RelativeLayout>


		<EditText
			android:id="@+id/id_et_username_edit"
			android:layout_width="match_parent"
			android:layout_height="@dimen/space_40"
			android:layout_marginLeft="@dimen/space_10"
			android:layout_marginRight="@dimen/space_10"
			android:background="@drawable/chs_dialog_btn_normal"
			android:textColor="@color/dialog_text_normal_color"
			android:imeOptions="normal"
			android:textCursorDrawable="@drawable/color_cursor"
			android:gravity="center"
			android:inputType="textCapCharacters"
			android:maxLines="1"
			android:textSize="15sp"/>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/space_30"
			android:layout_gravity="center"
			android:gravity="center"


			android:layout_marginTop="@dimen/space_20"
			android:layout_marginBottom="@dimen/space_30"
			android:orientation="horizontal">
			<View
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:background="@null"
				/>
			<Button
				android:id="@+id/id_b_cancle"
				android:layout_width="70dp"
				android:layout_height="match_parent"
				android:background="@drawable/chs_dialog_btn_normal"
				android:textAllCaps="false"
				android:text="@string/cancel"
				android:textColor="@color/dialog_btn_text_normal_color"
				android:textSize="13sp" />

			<Button
				android:id="@+id/id_b_save"
				android:layout_width="70dp"
				android:layout_height="match_parent"
				android:layout_marginLeft="@dimen/space_10"
				android:layout_marginRight="@dimen/space_10"
				android:background="@drawable/chs_dialog_btn_normal"
				android:text="@string/save"
				android:textAllCaps="false"
				android:textColor="@color/dialog_btn_text_normal_color"
				android:textSize="13sp" />

		</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>