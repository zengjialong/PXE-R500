<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:layout_gravity="center"
	android:gravity="center"
    android:background="#FF599ef5"
    android:id="@+id/id_llyout_net_topbar"
    >
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center"
 		android:orientation="horizontal">    
	    <LinearLayout
			android:id="@+id/id_llyout_net_back"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:gravity="center"
	 		android:orientation="horizontal">    
			<Button
				android:id="@+id/id_b_back"
				android:layout_width="25dp"
				android:layout_height="25dp"		
				android:layout_gravity="center"
				android:gravity="center"
				android:background="@drawable/chs_net_back"
				android:clickable="false"
				/> 
		</LinearLayout> 
	
	   	<!-- Page Name -->
	    <TextView
			android:id="@+id/di_tv_net_page_name"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="Register"
			android:textColor="@color/white"
			android:textSize="18sp"
			/>
	     <LinearLayout
			android:id="@+id/id_llyout_net_forward"
			android:layout_width="30dp"
			android:layout_height="match_parent"
			android:gravity="center"
	 		android:orientation="horizontal">    
			<Button
				android:id="@+id/id_b_forward"
				android:layout_width="20dp"
				android:layout_height="20dp"		
				android:layout_gravity="center"
				android:gravity="center"
				android:visibility="gone"
				android:background="@drawable/chs_net_forward"
				android:clickable="false"
				/> 
		</LinearLayout> 
	</LinearLayout> 
</RelativeLayout>