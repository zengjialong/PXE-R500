<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/id_llyout_about_dialog"
	android:layout_width="260dp"
	android:layout_height="210dp"
	android:layout_gravity="center"

	android:orientation="vertical">

	<LinearLayout
		android:layout_width="260dp"
		android:layout_height="210dp"
		android:layout_gravity="center"
		android:gravity="center"
		android:background="@drawable/chs_dialog_bg"
		android:orientation="vertical">

		<TextView
			android:id="@+id/id_t_msg"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:textAllCaps="false"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="@string/six_pwd"
			android:textColor="@color/text_color_white"
			android:textSize="@dimen/group_opt_text_size" />

        <View
            android:id="@+id/id_v_0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/dialog_midline_color"
            />

		<EditText
			android:id="@+id/id_et_mm_edit"
			android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:background="@drawable/chs_edit_bg"
			android:textColor="@color/white"
			android:inputType="number"
			android:maxLines="1"
			android:maxLength="4"
			android:textSize="15sp"/>

		<LinearLayout
            android:layout_width="180dp"
            android:layout_height="30dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_marginTop="20dp"
			android:orientation="horizontal">
			<Button
				android:id="@+id/id_b_cancle"
				android:layout_width="80dp"
				android:layout_height="match_parent"
				android:background="@drawable/chs_edit_bg"
				android:textAllCaps="false"
				android:text="@string/cancel"
				android:textColor="@color/white"
				android:textSize="@dimen/group_opt_text_size" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
			<Button
				android:id="@+id/id_b_ok"
                android:layout_width="80dp"
                android:layout_height="match_parent"
				android:background="@drawable/chs_edit_bg"
				android:text="@string/Sure"
				android:textAllCaps="false"
				android:textColor="@color/white"
				android:textSize="@dimen/group_opt_text_size" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>